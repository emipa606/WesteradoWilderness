<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Plant_Agave"]/plant/visualSizeRange/min</xpath>
        <value>
          <min>0.9</min>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Plant_SaguaroCactus"]/graphicData/texPath</xpath>
        <value>
          <texPath>Things/Plants/FloweringSaguaro</texPath>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Plant_SaguaroCactus"]/plant</xpath>
        <value>
          <immatureGraphicPath>Things/Plant/SaguaroCactus</immatureGraphicPath>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Plant_SaguaroCactus"]/plant/harvestMinGrowth</xpath>
        <value>
          <harvestMinGrowth>0.70</harvestMinGrowth>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>
