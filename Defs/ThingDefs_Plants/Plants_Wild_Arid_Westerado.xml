<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--====================================== Carpets ======================================== -->
  <ThingDef ParentName="PlantBase">
    <defName>Plant_AridGrass_Westerado</defName>
    <label>arid grass</label>
    <description>Wild arid grass. Grows anywhere arid that has minimally fertile ground.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/GArid</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>2.5</growDays>
      <leaflessGraphicPath>Things/Plants/Leafless/GArid_Leafless</leaflessGraphicPath>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.4~0.75</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>
  <!--===========================  Bushes ==============================-->
  <ThingDef ParentName="PlantBase">
    <defName>Plant_PricklyPear_Westerado</defName>
    <label>prickly pear</label>
    <description>Tangled, thorny, woody shoots covered with leaves. Prickly pear grow in clusters, and slow down anyone moving over them.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <pathCost>45</pathCost>
    <graphicData>
      <texPath>Things/Plants/PricklyPear</texPath>
      <drawSize>1.7</drawSize>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.7</fertilitySensitivity>
      <growDays>7.25</growDays>
      <harvestWork>160</harvestWork>
      <maxMeshCount>4</maxMeshCount>
      <dieIfLeafless>true</dieIfLeafless>
      <visualSizeRange>0.85~1.25</visualSizeRange>
      <topWindExposure>0.12</topWindExposure>
      <wildClusterRadius>5</wildClusterRadius>
      <wildClusterWeight>150</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
  </ThingDef>
  <ThingDef ParentName="PlantBase">
    <defName>Plant_Senecio_Westerado</defName>
    <label>senecio</label>
    <description>A smaller flower with daisy flowers. Stores water in its leaves.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.5</Flammability>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/SenecioPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>1.15</drawSize>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
      </shadowData>
    </graphicData>
    <ingestible />
    <plant>
      <fertilityMin>0.15</fertilityMin>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>3</growDays>
      <leaflessGraphicPath>Things/Plants/Leafless/SenecioPlant_Leafless</leaflessGraphicPath>
      <harvestWork>40</harvestWork>
      <wildClusterRadius>6</wildClusterRadius>
      <wildClusterWeight>50</wildClusterWeight>
      <maxMeshCount>4</maxMeshCount>
      <visualSizeRange>0.4~0.8</visualSizeRange>
      <topWindExposure>0.1</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>
