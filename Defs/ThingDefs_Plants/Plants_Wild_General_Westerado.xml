<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--====================================== Misc ======================================== -->
  <ThingDef ParentName="PlantBase">
    <defName>Plant_Chanterelle_Westerado</defName>
    <label>chanterelle</label>
    <description>Wild chanterelle. Useful as a meat-substitute. Grows anywhere there is a little light and minimally fertile ground.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.20</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Chanterelle</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <hideAtSnowDepth>0.4</hideAtSnowDepth>
    <fillPercent>0.05</fillPercent>
    <pathCost>5</pathCost>
    <ingestible />
    <plant>
      <harvestedThingDef>RawChanterelle</harvestedThingDef>
      <harvestYield>4</harvestYield>
      <harvestWork>120</harvestWork>
      <harvestTag>Standard</harvestTag>
      <fertilityMin>0.25</fertilityMin>
      <fertilitySensitivity>0.6</fertilitySensitivity>
      <growDays>4.25</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <wildClusterRadius>3</wildClusterRadius>
      <wildClusterWeight>300</wildClusterWeight>
      <maxMeshCount>4</maxMeshCount>
      <visualSizeRange>0.1~0.4</visualSizeRange>
      <topWindExposure>0.08</topWindExposure>
      <wildOrder>1</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
